<script type="text/javascript">
  $(function () {
    $('body').on('click', '.list-group .list-group-item', function () {
      $(this).toggleClass('active');
    });
  });
</script>

<div class="col-sm-4 col-md-4 col-lg-3">
  <div class="foods-panel panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= cat.name %></h3>
      <a class="pull-right btn btn-primary selector" title="select all"><i class="glyphicon glyphicon-unchecked"></i></a>
    </div>
    <div class="panel-body">
      <div class="foods-panel-menu">
        <a href="#" class="btn btn-success">Add <span class="glyphicon glyphicon-plus"/></a>
        <a href="#" class="pull-right btn btn-danger">Delete <span class="glyphicon glyphicon-trash"/></a>
      </div>
      <!-- Input field for adding new food item -->
      <div class="add-food-input form-group">
        <div class="input-group">
          <input type="text" class="form-control" name="validate-optional" id="validate-optional" placeholder="New Food Item">
          <span class="input-group-addon info"><span class="glyphicon glyphicon-plus"></span></span>
        </div>
      </div>
      <ul class="list-group">
        <% cat.food_items.each do |foodItem| %>
          <li class="list-group-item">
            <%= foodItem.name %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>