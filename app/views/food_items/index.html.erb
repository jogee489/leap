<div class="food_items index">

  <%= link_to("Add New Food Item", {:action => 'new'}, :class => 'action new') %>

  <table class="listing" summary="Food Items list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Food Item</th>
      <th>Name</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
    <% @foodItems.each do |fi| %>
    <tr>
      <td><%= fi.id %></td>
      <td><%= fi.name %></td>
      <td class="center"><%= fi.category == nil ? 'None' : fi.category.name %></td>
      <td class="actions">
	<%= link_to("Show", {:action => 'show', :id => fi.id}, :class => 'action show') %>
	<%= link_to("Edit", {:action => 'edit', :id => fi.id}, :class => 'action edit') %>
	<%= link_to("Delete", {:action => 'delete', :id => fi.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
  </div>
