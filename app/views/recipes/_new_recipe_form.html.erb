<div id="new-recipe-modal" class="modal fade" role="dialog">
	<div class="modal-content">
		<div class="modal-header">
			<a class="pull-right btn close" data-dismiss="modal"><span class="glyphicon glyphicon-remove"/></a>
		</div>
		<div class="recipe-box">
			<h1 for="title">Title</h1>
			<p contenteditable="true" class="rec-title" required>Recipe Title</p>
			<h1 for="ingredients">Ingredients</h1>
			<p contenteditable="true" class="rec-ingredients" required>Recipe Ingredients</p>
			<h1 for="directions">Directions</h1>
			<p contenteditable="true" class="rec-directions" required>Recipe Directions</p>
			<h1 for="tag_id">Tags</h1>
			<p contenteditable="true" class="rec-tags" required>Recipe Tag</p>
			<a class="btn btn-app btn-edit-recipe " >Save 
	    	<span class="glyphicon glyphicon-save"/></a>
		</div>
	</div>
</div>