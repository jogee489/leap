

<div class="container" id="recipe_table">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>
          Recipes 
        </h4>
      </div>
      <table class="table table-fixed table-bordered">
        <thead>
          <tr>
            <th class="col-xs-2"><a href="#"><span class="glyphicon glyphicon-plus"></span></a></th>
            <th class="col-xs-2"><a href="#"><span class="glyphicon glyphicon-trash"></span></a></th>
          </tr>
        </thead>
        <tbody>
          <% recipes.each do |recipe| %>
          <tr>
            <td class="col-xs-2 checkbox">
                <label>
                  <input type="checkbox">
                </label>
            </td>
            <td class="col-xs-10 recipe-name" data-link="<%= recipe_path(recipe) %>">
                <%= recipe.title %>
            </td>
          </tr>

          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<script>
  $("td[data-link]").click(function() {
    document.location.href= this.getAttribute("data-link") ;
  })
</script>